// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/python-3
{
    "name": "Python 3 & PostgreSQL",
    "dockerComposeFile": "docker-compose.yml",
    "service": "python",
    // Use 'settings' to set *default* container specific settings.json values on container create. 
    // You can edit these settings after create using File > Preferences > Settings > Remote.
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "files.trimTrailingWhitespace": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.venvPath": "/home/vscode/.cache/pypoetry/virtualenvs",
        "python.pythonPath": "/home/vscode/.cache/pypoetry/virtualenvs/recipe-app-py3.7/bin/python",
        "python.linting.flake8Path": "/home/vscode/.cache/pypoetry/virtualenvs/recipe-app-py3.7/bin/flake8",
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": [
            "--line-length",
            "100"
        ]
    },
    "postCreateCommand": "/workspace/ssh-postinstall.sh",
    "workspaceFolder": "/workspace/recipe-app-api",
    "extensions": [
        "ms-python.python",
        "bungcip.better-toml",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
    ]
}